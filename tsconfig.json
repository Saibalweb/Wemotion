{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "react-native",
      "jest"
    ],
    "skipLibCheck": true,
    "jsx": "react-native",
    "esModuleInterop":true,
  },
  "include": [
    "src/**/*",
    "*.ts",
    "*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}